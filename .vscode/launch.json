    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Py",
            "type": "python",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args" :[
                "--app-dir",
                "src",
                "main:app",
                "--reload"
            ]
        }
    ]
}